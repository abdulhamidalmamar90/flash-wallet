
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Stored in /users/{userId}. Contains user identity, balance and settings.",
      "type": "object",
      "properties": {
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "username": { "type": "string" },
        "email": { "type": "string" },
        "phone": { "type": "string" },
        "gender": { "type": "string", "enum": ["male", "female"] },
        "birthDate": { "type": "string", "format": "date-time" },
        "avatarUrl": { "type": "string" },
        "customId": { "type": "string", "description": "Format: [A-Z][0-9]{12}" },
        "balance": { "type": "number" },
        "role": { "type": "string", "enum": ["user", "admin", "agent", "employee"] },
        "verified": { "type": "boolean", "description": "Identity/KYC Verification" },
        "phoneVerified": { "type": "boolean" },
        "emailVerified": { "type": "boolean" },
        "language": { "type": "string", "enum": ["en", "ar"] },
        "country": { "type": "string" },
        "pin": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["username", "email", "customId", "balance", "role", "verified", "language"]
    },
    "Transaction": {
      "title": "Transaction",
      "description": "Stored in /users/{userId}/transactions/{txId}. History of movements.",
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["send", "receive", "withdraw", "purchase", "deposit", "refund"] },
        "amount": { "type": "number" },
        "recipient": { "type": "string" },
        "sender": { "type": "string" },
        "service": { "type": "string" },
        "status": { "type": "string", "enum": ["completed", "pending", "rejected"] },
        "date": { "type": "string", "format": "date-time" }
      },
      "required": ["type", "amount", "status", "date"]
    },
    "SupportTicket": {
      "title": "Support Ticket",
      "description": "User requests for assistance.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "username": { "type": "string" },
        "email": { "type": "string" },
        "subject": { "type": "string" },
        "message": { "type": "string" },
        "imageUrl": { "type": "string" },
        "status": { "type": "string", "enum": ["open", "closed"] },
        "date": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "subject", "message", "status", "date"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "UserProfile",
      "description": "Individual user settings and balance"
    },
    "/support_tickets/{ticketId}": {
      "schema": "SupportTicket",
      "description": "Global support requests"
    }
  }
}
