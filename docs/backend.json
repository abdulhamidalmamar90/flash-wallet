
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Stored in /users/{userId}. Contains user identity, balance and settings.",
      "type": "object",
      "properties": {
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "username": { "type": "string" },
        "email": { "type": "string" },
        "phone": { "type": "string" },
        "gender": { "type": "string", "enum": ["male", "female"] },
        "birthDate": { "type": "string", "format": "date-time" },
        "avatarUrl": { "type": "string" },
        "customId": { "type": "string", "description": "Format: [A-Z][0-9]{12}" },
        "balance": { "type": "number" },
        "role": { "type": "string", "enum": ["user", "admin", "agent", "employee"] },
        "verified": { "type": "boolean", "description": "Identity/KYC Verification" },
        "phoneVerified": { "type": "boolean" },
        "emailVerified": { "type": "boolean" },
        "language": { "type": "string", "enum": ["en", "ar"] },
        "country": { "type": "string" },
        "pin": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["username", "email", "customId", "balance", "role", "verified", "language"]
    },
    "ChatSession": {
      "title": "Chat Session",
      "description": "Active support chat sessions.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "username": { "type": "string" },
        "email": { "type": "string" },
        "lastMessage": { "type": "string" },
        "status": { "type": "string", "enum": ["open", "active", "closed"] },
        "caseId": { "type": "string" },
        "rating": { "type": "number" },
        "joinedBy": { "type": "string" },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    },
    "ChatMessage": {
      "title": "Chat Message",
      "description": "Individual messages in a chat session.",
      "type": "object",
      "properties": {
        "senderId": { "type": "string" },
        "text": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" },
        "isAdmin": { "type": "boolean" }
      }
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "UserProfile",
      "description": "Individual user settings and balance"
    },
    "/chat_sessions/{sessionId}": {
      "schema": "ChatSession",
      "description": "Active support chats"
    },
    "/chat_sessions/{sessionId}/messages/{messageId}": {
      "schema": "ChatMessage",
      "description": "Individual messages"
    }
  }
}
