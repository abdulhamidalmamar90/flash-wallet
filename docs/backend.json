
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Stored in /users/{userId}. Contains user identity, balance and settings.",
      "type": "object",
      "properties": {
        "username": { "type": "string" },
        "email": { "type": "string" },
        "phone": { "type": "string" },
        "avatarUrl": { "type": "string", "description": "URL or Data URI of the user avatar" },
        "customId": { "type": "string", "description": "Format: [A-Z][0-9]{12}" },
        "balance": { "type": "number" },
        "role": { "type": "string", "enum": ["user", "admin"] },
        "verified": { "type": "boolean" },
        "language": { "type": "string", "enum": ["en", "ar"] },
        "country": { "type": "string", "description": "User's residence country code (e.g., EG, SA)" },
        "phoneVerified": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["username", "email", "customId", "balance", "role", "verified", "language"]
    },
    "VerificationRequest": {
      "title": "Verification Request",
      "description": "Stored in /verifications/{id}. Identity documents for KYC.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "username": { "type": "string" },
        "country": { "type": "string" },
        "documentType": { "type": "string", "enum": ["ID Card", "Passport", "Driver License"] },
        "documentNumber": { "type": "string" },
        "documentUrl": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"] },
        "reason": { "type": "string", "description": "Reason for rejection if applicable" },
        "date": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "username", "country", "documentType", "documentNumber", "documentUrl", "status", "date"]
    },
    "DepositMethod": {
      "title": "Deposit Method",
      "description": "Stored in /deposit_methods/{id}. Configured by admin per country.",
      "type": "object",
      "properties": {
        "country": { "type": "string" },
        "name": { "type": "string" },
        "currencyCode": { "type": "string" },
        "exchangeRate": { "type": "number" },
        "fields": { "type": "array", "description": "Dynamic payment details (e.g. IBAN, Account Name)" },
        "isActive": { "type": "boolean" }
      },
      "required": ["country", "name", "currencyCode", "exchangeRate", "fields", "isActive"]
    },
    "WithdrawalMethod": {
      "title": "Withdrawal Method",
      "description": "Stored in /withdrawal_methods/{id}. Advanced financial config for withdrawals.",
      "type": "object",
      "properties": {
        "country": { "type": "string" },
        "name": { "type": "string" },
        "iconUrl": { "type": "string" },
        "currencyCode": { "type": "string" },
        "exchangeRate": { "type": "number" },
        "feeType": { "type": "string", "enum": ["fixed", "percentage"] },
        "feeValue": { "type": "number" },
        "fields": { "type": "array" },
        "isActive": { "type": "boolean" }
      },
      "required": ["country", "name", "currencyCode", "exchangeRate", "feeType", "feeValue", "isActive"]
    },
    "Transaction": {
      "title": "Transaction",
      "description": "Stored in /users/{userId}/transactions/{txId}. History of movements.",
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["send", "receive", "withdraw", "purchase", "deposit"] },
        "amount": { "type": "number" },
        "recipient": { "type": "string" },
        "sender": { "type": "string" },
        "service": { "type": "string" },
        "status": { "type": "string", "enum": ["completed", "pending", "rejected"] },
        "date": { "type": "string", "format": "date-time" }
      },
      "required": ["type", "amount", "status", "date"]
    },
    "Notification": {
      "title": "Notification",
      "description": "Stored in /users/{userId}/notifications/{notifId}. System alerts.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "message": { "type": "string" },
        "type": { "type": "string", "enum": ["system", "transaction", "verification"] },
        "read": { "type": "boolean" },
        "date": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "message", "type", "read", "date"]
    },
    "WithdrawalRequest": {
      "title": "Withdrawal Request",
      "description": "Stored in /withdrawals/{requestId}. Global queue for admin approval.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "username": { "type": "string" },
        "methodName": { "type": "string" },
        "amountUsd": { "type": "number" },
        "localAmount": { "type": "number" },
        "currencyCode": { "type": "string" },
        "feeAmount": { "type": "number" },
        "netAmount": { "type": "number" },
        "details": { "type": "object" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"] },
        "date": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "username", "amountUsd", "status", "date"]
    },
    "DepositRequest": {
      "title": "Deposit Request",
      "description": "Stored in /deposits/{depositId}. Global queue for admin to approve money entry.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "username": { "type": "string" },
        "senderName": { "type": "string" },
        "amount": { "type": "number" },
        "method": { "type": "string" },
        "proofUrl": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"] },
        "date": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "username", "amount", "status", "date"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": "UserProfile",
      "description": "Individual user settings and balance"
    },
    "/verifications/{verificationId}": {
      "schema": "VerificationRequest",
      "description": "Identity documents queue"
    },
    "/deposit_methods/{methodId}": {
      "schema": "DepositMethod",
      "description": "Admin configured deposit options by country"
    },
    "/withdrawal_methods/{methodId}": {
      "schema": "WithdrawalMethod",
      "description": "Admin configured withdrawal options by country"
    },
    "/users/{userId}/transactions/{transactionId}": {
      "schema": "Transaction",
      "description": "User specific transaction history"
    },
    "/users/{userId}/notifications/{notificationId}": {
      "schema": "Notification",
      "description": "User specific system alerts"
    },
    "/withdrawals/{withdrawalId}": {
      "schema": "WithdrawalRequest",
      "description": "Global queue for withdrawals pending admin action"
    },
    "/deposits/{depositId}": {
      "schema": "DepositRequest",
      "description": "Global queue for deposits pending admin action"
    }
  }
}
